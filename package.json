{
    "name": "@darraghor/eslint-plugin-nestjs-typed",
    "version": "1.0.0",
    "description": "Eslint rules for nestjs projects",
    "scripts": {
        "clean": "rm -Rf ./dist/",
        "build:ci": "npm run build",
        "build": "npm run clean && mkdir ./dist && tsc --project tsconfig.build.json",
        "lint": "npx eslint -c .eslintrc.js --ext .ts src --no-error-on-unmatched-pattern --no-ignore",
        "test": "export NODE_OPTIONS=\"--max-old-space-size=8192\" && npx jest --runInBand --colors --reporters=default --no-cache --coverage=false --silent=false -c jest.config.ts",
        "pre-commit": "npx lint-staged",
        "prettier": "prettier --write src/*",
        "prepare": "husky",
        "release": "npx semantic-release",
        "semantic-release": "semantic-release"
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "publishConfig": {
        "provenance": true
    },
    "homepage": "https://github.com/darraghoriordan/eslint-plugin-nestjs-typed",
    "repository": {
        "type": "git",
        "url": "https://github.com/darraghoriordan/eslint-plugin-nestjs-typed"
    },
    "engines": {
        "node": "^18.18.0 || >=20.0.0"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "author": {
        "name": "Darragh ORiordan",
        "email": "darragh.oriordan@gmail.com",
        "url": "https://darraghoriordan.com"
    },
    "main": "dist/index.js",
    "types": "index.d.ts",
    "dependencies": {
        "@typescript-eslint/scope-manager": "7.14.1 || ^8.0.0",
        "@typescript-eslint/utils": "7.14.1 || ^8.0.0",
        "eslint-module-utils": "2.8.1",
        "reflect-metadata": "0.2.2"
    },
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/exec": "6.0.3",
        "@types/eslint": "8.56.11 || ^9.0.0",
        "@types/jest": "29.5.12",
        "@types/node": "20.14.14 || ^22.0.0",
        "@typescript-eslint/eslint-plugin": "7.14.1 || ^8.0.0",
        "@typescript-eslint/parser": "7.14.1 || ^8.0.0",
        "@typescript-eslint/rule-tester": "7.14.1 || ^8.0.0",
        "class-validator": "^0.14.1",
        "eslint": "8.57.0 || ^9.0.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "51.0.1",
        "husky": "9.0.11",
        "jest": "29.7.0",
        "jest-create-mock-instance": "2.0.0",
        "jest-junit": "16.0.0",
        "lint-staged": "15.2.8",
        "prettier": "3.3.3",
        "semantic-release": "23.1.1",
        "ts-jest": "29.1.5",
        "ts-node": "10.9.2",
        "typescript": "^5.5.4"
    },
    "peerDependencies": {
        "@typescript-eslint/parser": "^7.0.0 || ^8.0.0",
        "class-validator": "*",
        "eslint": "^8.56.0 || ^9.0.0"
    },
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin",
        "nestjs",
        "linter",
        "lint",
        "style"
    ],
    "license": "ISC",
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.{ts,js,css,md}": "prettier --write"
    }
}
